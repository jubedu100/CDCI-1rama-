<mvc:View controllerName="ZPPM_APP_VOD10.controller.App"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:l="sap.ui.layout"
  xmlns="sap.m"
  height="100%"
  displayBlock="true"
  class="viewPadding">
  <App
    id="outerApp"
    busy="false"
    busyIndicatorDelay="0"
    backgroundColor="white">
    <Page id="PageApp"
      showHeader ="false"
      class="zppm_page">
      <content>
        <l:HorizontalLayout class="zppm_hlayout">
          <l:VerticalLayout
            id="vBody"
            width="100%"
            class="zppm_body_main zppm_toolheader_static">
              <mvc:XMLView
                viewName="ZPPM_APP_VOD10.view.ToolHeaderView"
                class="zppm_toolheader zppm_toolheader_aux"/>
                <App id="innerApp"
                  busy="false"
                  busyIndicatorDelay="0"
                  backgroundColor="white"
                  class="zppm_body_app"/>
            </l:VerticalLayout>
          </l:HorizontalLayout>
        </content>
    </Page>
  </App>
</mvc:View>